#include <stdio.h>
void main() 
{
    int n,i;
    printf("enter the number of element in an array \n");
    scanf("%d",&n);
    int arr[n];
    for( i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    int largest = arr[0];
    for(i=1;i<n;i++)
    {
        if (arr[i]>largest)
        {
          largest = arr [i];  
        }
      }
    printf("the largest element in the array is %d\n",largest);
}
   -------------------------------------------------
Output
enter the number of element in an array 
2
5
4
the largest element in the array is 5
