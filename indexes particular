#include <stdio.h>
void main()
{
    char arr[100],let;
    int i=0;
    printf ("Enter the character:");
    scanf(" %c",&let);
    printf ("\nEnter the string : ");
    scanf ("%s",&arr);
    while(arr[i]!='\0')
    {
        if(arr[i]==let)
        {
        printf ("\nThe index value of the character is %d",i);
        break;        
        }
        else
        i++;
    }
    
}
