# include <stdio.h>
void main()
{
    int n,sum=0;
    printf("enter the number n :");
    scanf("%d",&n);
    for (int i= 1;i<=n/2;i++)
    {
        if (n%i==0)
        {
          sum=sum+i;
        }
    }
    if(sum==n&&n>0)
    {
      printf("\nprefect number");
    }
    else
    {
      printf("\nnot a prefect number" );
    }
}
---------------------------------------------------
Output
enter the number n :6
prefect number

enter the number n :12
not a prefect number


